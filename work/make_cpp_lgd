export PKG_CONFIG_PATH=$HOME/install/libgeodecomp/lib/pkgconfig/

mv ./odir4/dgswem.o ./odir4/dgswem.oB
INCLUDES=`ls -d -1 ./odir4/*.o`
echo $INCLUDES
mv ./odir4/dgswem.oB ./odir4/dgswem.o

CPP_SOURCE_FILE="../src/dgswem_lgd.cpp"
CPP_OBJECT_FILE="dgswem_lgd.o"
EXE_NAME="dgswem_lgd"
CPPFLAGS="`pkg-config --cflags --libs libgeodecomp`"

CMD="g++ -c ${CPP_SOURCE_FILE} $CPPFLAGS"
echo $CMD
$CMD 

CMD="g++ -o ${EXE_NAME} ${CPP_OBJECT_FILE} $INCLUDES $CPPFLAGS -lgfortran"
echo $CMD
$CMD